{
"scopeName": "source.pick",
"name": "pick",
"fileTypes": [
  "pick"
],

"patterns": [
  {
  "match": "(\\'[A-Za-z0-9\\:\\-\\_ .!@,=\"\\/\\\\]*\\' |\\\"[A-Za-z0-9\\:\\-\\_ .!@,=\\'\\/\\\\]*\\\"|\\\\[A-Za-z0-9\\:\\-\\_ .!@,=\\'\\/\\\"]*\\\\)",
  "name": "string.other.quoted-or-unquoted.pick"
  },
  {
  "match": "\\*.*",
  "name": "comment.line.asterisk.pick"
  },
  {
  "match": "\\!.*",
  "name": "comment.line.bang.pick"
  },
  {
"comment": "will compile but not best practice.",
  "match": "\\b(ABORT|GOTO)\\b",
  "name": "invalid.illegal.pick"
  },
  {
  "comment": "this matches IF when not followed by THEN",
  "match": "^(IF)(?:(.*[^THEN|ELSE|ON ERROR|LOCKED]))(\n)",
  "name": "meta.no.then.function.pick",
  "captures":{
      "1": {"name": "invalid.illegal.pick"}
      }
  },
  {
  "match": "(GOSUB )([a-z0-9\\-\\_\\.]*)",
  "name": "meta.gosub.function.pick",
  "captures":{
      "1": {"name": "keyword.control.pick"},
      "2": {"name": "storage.pick"}
    }
  },
  {
  "match": "(\\(|\\)|\\/|\\&|\\$|,|:|=|<|>|#|\\bLE\\b|\\bLT\\b|\\bEQ\\b|\\bGE\\b|\\bGT\\b|\\bNE\\b|\\bOR\\b|\\bAND\\b)",
  "name": "keyword.operator.pick"
  },
  {
  "match": "(@[A-Za-z0-9\\-\\_.]*)",
  "name": "storage.pick"
  },
  {
  "match": "(\\bF.\\b[A-Za-z0-9\\:\\-\\_.]*(?=\\,)|\\bF.\\b[A-Za-z0-9\\:\\-\\_.]*(?=\\ ))",
  "name": "storage.pick"
  },
  {
  "match": "\\b(BEGIN|CASE|DO|ELSE|END|ON ERROR|FROM|IF|THEN|UNTIL|WHILE)\\b",
  "name": "keyword.control.pick"
  },
  {
    "match": "\\b(LOOP|FOR|NEXT|REPEAT|EXIT|CONTINUE)\\b",
    "name": "keyword.other.special-method.pick"
  },
  {
  "match": "\\b(BASICTYPE|DEFINE|IFDEF|INCLUDE|INSERT|UNDEFINE)\\b",
  "name": "storage.pick"
  },
  {
  "comment": "do not forget to remove before sendout",
  "match": "\\b(BREAK|DEBUG)\\b",
  "name": "invalid.illegal.debug.pick"
  },
  {
  "match": "\\b([0-9]+)\\b",
  "name": "constant.numeric.pick"
  },
  {
  "match": "\\b(ABS|ACOS|ALPHA(?=\\()|ASCII|ASIN|ATAN|ASSIGNED|BITAND|BITNOT|BITOR|BITXOR|BPIOCP|BPIOCPN|BYTELEN|CALCULATE|\\{|\\}|CAT|CATS|CHAR|CHARS|CHECKSUM|COL1|COL2|COUNT|DATE(?=\\()|DCOUNT|DOWNCASE|DQUOTE|DROUND|ENCRYPT|EQS|EREPLACE|EXP|EXTRACT|FIELD|FILEINFO|GES|GETUSERGROUP|GROUP|ICONV|ICONVS|INDEX|INMAT|INT|ITYPE|LEN|LENS|LES|LN|LOWER|MATCHFIELD|MOD|NEG|NES|NOT|NOTS|NUM|NUMS|OCONV|OCONVS|PWR|QUOTE|RAISE|RECORDLOCKED|RECORDLOCKEDL|RECORDLOCKEDU|REPLACE|RND|RNDSEED|SADD|SDIV|SEQ|SEQS|SIN|SMUL|SORT|SOUNDEX|SPACE|SPACES|SPLICE|SQUOTE|SQRT|SSUB|STR|STRS|SUBSTRINGS|SUM|SWAP|SYSTEM|TAN|TIME(?=\\()|TIMEDATE(?=\\()|TRANSACTION ABORT|TRANSACTION COMMIT|TRANSACTION START|TRIM|TRIMB|TRIMF|TRIMS|UNASSIGNED|UPCASE|XLATE|XMLTODB)\\b",
  "name": "storage.type.pick"
  },
  {
  "match": "\\b(CALL|CALLC|CAPTURING|CHAIN|CHANGE|CLEAR|CLEARCOMMON|CLEARDATA|CLEARFILE|CLEARINPUT|CLEARSELECT|CLOSE|CLOSESEQ|COMMON|CONVERT|CRT|DATA|DEFFUN|DEL|DELETE|DELETELIST|DELETEU|DIM|DIMENSION|ECHO|ENTER|EQU|EQUATE|EXECUTE|FILELOCK|FILEUNLOCK|FIND|FINDSTR|FLUSH|FMT|FOOTING|FORMLIST|FUNCTION|GET|GETLIST|HEADING|HEADINGE|HUSH|IF|IN|INPUT|INPUTCLEAR|INPUTERR|INPUTIF|INPUTNULL|INPUTRAP|INS|INSERT|LOCATE|LOCK|LOCKED|MAT|MATBUILD|MATPARSE|MATREAD|MATREADL|MATREADU|MATWRITE|MATWRITEU|NULL|\\b(?<!.)OPEN(?= )|OPENSEQ|openSocket|OpenXMLData|OSBREAD|OSBWRITE|OSCLOSE|OSDELETE|OSOPEN|OSREAD|OSWRITE|PAGE|PAUSE|PASSLIST|PCPERFORM|PERFORM|PRECISION|PRINT|PRINTER|PRINTERCLOSE|PRINTERR|PROCREAD|PROCWRITE|PROGRAM|PROMPT|READ|READBCK|READBCKL|READBCKU|READFWD|READFWDL|READFWDU|READL|READLIST|READNEXT|READNEXTTUPLE|READSELECT|READSEQ|READT|READU|READV|READVL|READVU|READXBCK|READXFWD|ReadXMLData|RELEASE|ReleaseXML|REM|REMOVE|RETURN|REUSE|RETURNING|REWIND|RQM|RTNLIST|SELECT|SELECTINDEX|SELECTINFO|SETTING|SEND|SENDX|SLEEP|SSELECT|STOP|SUBROUTINE|(?<= )TO(?= )|UNLOCK|UDTEXECUTE|WAKE|WEOF|WEOFSEQ|WRITE|WRITELIST|WRITESEQ|WRITET|WRITEU|WRITEV|WRITEVU|writeSocket)\\b",
  "name": "constant.variable.pick"
  }
]
}
